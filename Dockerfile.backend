# Используем официальный образ Node.js с версией 18
FROM node:18

# Рабочая директория внутри контейнера
WORKDIR /usr/src/app

# Копируем файлы конфигурации для установки зависимостей
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем весь проект в контейнер
COPY . .

# Открываем порт 3000 для сервера
EXPOSE 5000

# Команда для запуска сервера
CMD ["node", "server.js"]
